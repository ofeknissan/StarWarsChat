@model ChatServer.Models.Rating

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/DetailsRaiting.css" type="text/css" />

<center>
<h1 class="text-light">Delete</h1>
<h3 class="text-light">Are you sure you want to delete this?</h3>
<br />
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h1 class="card-title model-name">@Html.DisplayFor(model => model.Name)</h1>
        <h6 class="card-subtitle mb-2 text-muted raiting-score"> @Html.DisplayFor(model => model.Score)</h6>
        <p class="card-text card-body">@Html.DisplayFor(model => model.Text)</p>
        <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    </form>
    </div>
</div>
</center>


@section scripts {
    <script src="~/js/ratingStars.js" type="text/javascript"></script>

}
