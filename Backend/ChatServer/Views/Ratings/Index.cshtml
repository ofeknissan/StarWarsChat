@model IEnumerable<ChatServer.Models.Rating>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/IndexRaiting.css" type="text/css" />

<h1 class="text-light">Rate our site! <i class="bi bi-emoji-smile"></i></h1>
<h3 class="text-light mt-2.5">Average Score: @ViewData["avg"]</h3>

<a class="btn btn-outline-primary button-rating-create ratebutton" asp-action="Create">Rate us!</a>
<div class="md-form active-pink active-pink-2 mb-3 mt-0">
    <form id="searcher">
        <div class="input-group">
            <input type="search"  id="query" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
            <button type="submit" class="btn btn-outline-primary">search</button>
        </div>
    </form>
</div>
<table class="table table-striped">
    <thead>
        <tr class="text-light rating-text">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-light">
                <td class="rating-name">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="rating-text raiting-score">
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td class="rating-text">
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td class="date rating-text">
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a class="btn btn-outline-light button-rating-create" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-light button-rating-create" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-light button-rating-create" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script type="text/html" id="injectSearchRes">
        <tr class="text-light">
            <td class="rating-name">
                {name}
            </td>
            <td class="rating-text raiting-score">
                {score}
            </td>
            <td class="rating-text">
                {text}
            </td>
            <td class="date rating-text">
                {date}
            </td>
            <td>
                <a class="btn btn-outline-light button-rating-create" asp-action="Edit" asp-route-id="{id}">Edit</a>
                <a class="btn btn-outline-light button-rating-create" asp-action="Details" asp-route-id="{id}">Details</a>
                <a class="btn btn-outline-light button-rating-create" asp-action="Delete" asp-route-id="{id}">Delete</a>
            </td>
        </tr>
    </script>
    <script src="~/js/ratingStars.js" type="text/javascript"></script>
    <script src="~/js/Search.js" type="text/javascript"></script>
}